{
  "name": "happy-opfs",
  "description": "A browser-compatible fs module inspired by the Deno fs and @std/fs APIs, based on OPFS implementation.",
  "author": "jiang115jie@gmail.com",
  "license": "GPL-3.0",
  "version": "1.0.0",
  "source": "./src/mod.ts",
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "types": "./dist/types.d.ts",
  "exports": "./src/mod.ts",
  "targets": {
    "main": {
      "isLibrary": true
    },
    "module": {
      "isLibrary": true
    }
  },
  "files": [
    "LICENSE",
    "README.md",
    "README.cn.md",
    "package.json",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "npx rimraf .parcel-cache dist",
    "check": "npx tsc --noEmit",
    "lint": "npx eslint src/",
    "watch": "npx parcel watch",
    "prebuild": "npx rimraf dist",
    "build": "npx parcel build",
    "prepublishOnly": "npm run build",
    "start": "npx parcel serve tests/index.html --dist-dir dist/dev --port 8443 --https --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JiangJie/happy-opfs.git"
  },
  "keywords": [
    "fs",
    "file",
    "directory",
    "opfs"
  ],
  "devDependencies": {
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "parcel": "^2.12.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@happy-js/happy-rusty": "npm:@jsr/happy-js__happy-rusty@^1.0.3",
    "@std/path": "npm:@jsr/std__path@^0.224.0"
  },
  "@parcel/resolver-default": {
    "packageExports": true
  }
}
