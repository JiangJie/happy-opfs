{
  "name": "happy-opfs",
  "description": "A browser-compatible fs module inspired by the Deno fs and @std/fs APIs, based on OPFS implementation.",
  "author": "jiang115jie@gmail.com",
  "license": "GPL-3.0",
  "version": "1.9.0",
  "type": "module",
  "source": "src/mod.ts",
  "main": "dist/main.cjs",
  "module": "dist/main.mjs",
  "types": "dist/types.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "README.cn.md",
    "package.json",
    "docs",
    "src",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "check": "pnpm exec tsc --noEmit",
    "lint": "pnpm exec eslint .",
    "prebuild": "pnpm run check && pnpm run lint",
    "build": "pnpm exec vite build",
    "predocs": "pnpm dlx rimraf docs",
    "docs": "pnpm exec typedoc",
    "prepublishOnly": "pnpm run build",
    "playwright:install": "pnpm exec playwright install",
    "test": "pnpm exec vitest run --coverage",
    "test:watch": "pnpm exec vitest watch",
    "test:ui": "pnpm exec vitest --ui"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JiangJie/happy-opfs.git"
  },
  "keywords": [
    "fs",
    "system",
    "file",
    "directory",
    "opfs",
    "origin",
    "private",
    "worker",
    "sync",
    "async",
    "upload",
    "download",
    "zip",
    "unzip"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.15",
    "eslint": "^9.39.1",
    "playwright": "^1.57.0",
    "typedoc": "^0.27.9",
    "typedoc-plugin-markdown": "4.4.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-mkcert": "^1.17.9",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@happy-ts/fetch-t": "^1.3.3",
    "@std/path": "npm:@jsr/std__path@^1.1.3",
    "fflate": "^0.8.2",
    "happy-rusty": "^1.5.0",
    "tiny-future": "^1.1.0",
    "tiny-invariant": "^1.3.3"
  }
}
